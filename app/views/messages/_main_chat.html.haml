.chat
  .main-header
    .left-header  
      .left-header__title
        = @group.name
      .left-header__members
        Member:
        .member
          - @group.users.each do |user|
            = user.name

    .right-header
      .right-header__button
        = link_to edit_group_path(@group) do
          Edit
  .messages
    = render @messages
    .message
      .upper-message
        .upper-message__user-name
          masa
        .upper-message__date
          2020/06/04
      .lower-message
        .lower-message__content
          おはよう！
    .message
      .upper-message
        .upper-message__user-name
          masa
        .upper-message__date
          2020/06/04
      .lower-message
        .lower-message__content
          今日は夜から雨

  .form
    = form_for [@group, @message] do |f|
      = f.text_field :content, class: 'form__message', placeholder: 'type a message'
      .form__mask
        = f.label :image, class: 'form__mask__image' do
          = icon('fa', 'image', class: 'icon-input-box')
          = f.file_field :image, class: 'hidden'
      = f.submit 'Send', class: 'form__submit'